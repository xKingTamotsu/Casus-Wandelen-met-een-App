<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WandelApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbUsername" Text="Username"/>
            <Entry x:Name="entryUsername" Placeholder="Username"/>
            <Label x:Name="lbPassword" Text="Password"/>
            <Entry x:Name="entryPassword" Placeholder="Password"/>
            <Button x:Name="btnSignIn" Text="Sign In" Clicked="SignInProcedure"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>